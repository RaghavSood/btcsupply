{{ define "content" }}
<div class="container mx-auto p-4">
  <h2 class="text-xl font-bold mb-4">Burns in Block #{{ .Block.BlockHeight }}</h2>
    <table class="min-w-full bg-white border border-gray-200">
        <thead>
            <tr>
                <th class="px-4 py-2 border-b">Transaction ID</th>
                <th class="px-4 py-2 border-b">Block Hash</th>
                <th class="px-4 py-2 border-b">Amount</th>
            </tr>
        </thead>
        <tbody>
            {{ range .Losses }}
            <tr>
                <td class="px-4 py-2 border-b">{{ .TxID }}</td>
                <td class="px-4 py-2 border-b">{{ .BlockHash }}</td>
                <td class="px-4 py-2 border-b">{{ .Amount.SatoshisToBTC }} BTC</td>
            </tr>
            {{ else }}
            <tr>
                <td colspan="5" class="px-4 py-2 border-b text-center">No recent losses found.</td>
            </tr>
            {{ end }}
        </tbody>
    </table>
</div>
{{ end }}


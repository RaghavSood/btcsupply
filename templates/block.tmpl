{{ define "content" }}
<div class="container mx-auto p-4">
  <div class="grid grid-cols-1">
    {{ $titlebg := "bg-emerald-800/30" }}
    {{ if .Losses }}
      {{ $titlebg = "bg-red-900/30" }}
    {{ end }}
    {{ if .Block.IsFutureBlock }}
      {{ $titlebg = "bg-sky-800/30" }}
    {{ end }}
    <div class="{{ $titlebg }} p-4">
      <h1 class="text-2xl font-semibold">Block #{{ .Block.BlockHeight }}</h1>
      <h3 class="text-lg font-mono break-words select-all">{{ .Block.BlockHash }}</h3>
      <h3 class="text-md font-mono mb-4">{{ .Block.BlockTimestamp.UTC }}{{ .Block.BlockTimestamp.UTC | TimeDisclaimer }}</h3>
    </div>
    <div class="p-4">
      <p>Theoretical Subsidy: {{ .TheoreticalSubsidy.SatoshisToBTC true }}</p>
      <p>Theoretical Supply: {{ .TheoreticalSupply.SatoshisToBTC true }}</p>
      <p>Fees Paid: {{ .BlockStats.Totalfee }}</p>
      <p>Actual Subsidy: {{ .CoinStats.Coinbase.SatoshisToBTC true }}</p>
    </div>
  </div>
    <table class="min-w-full bg-slate-950/30 border border-slate-700">
        <thead>
            <tr>
                <th class="text-start px-4 py-2 border-b border-slate-700">Transaction ID</th>
                <th class="text-start px-4 py-2 border-b border-slate-700">Amount</th>
            </tr>
        </thead>
        <tbody>
            {{ range .Losses }}
            <tr>
                <td class="px-4 py-2 border-b border-slate-700"><a href="/transaction/{{ .TxID }}">{{ .TxID }}</a></td>
                <td class="px-4 py-2 border-b border-slate-700">{{ .Amount.SatoshisToBTC true }} BTC</td>
            </tr>
            {{ else }}
            <tr>
                <td colspan="5" class="px-4 py-2 border-b border-slate-700 text-center">No recent losses found.</td>
            </tr>
            {{ end }}
        </tbody>
    </table>
</div>
{{ end }}

